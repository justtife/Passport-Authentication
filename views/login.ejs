<div class="alert alert-danger alert-dismissible">
  <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
  <p>
    Error Message:
    <strong><%= message.loginMessage || "Please Login" %></strong>
  </p>
</div>
<form action="/login" method="POST">
  <div class="form-group">
    <label for="username">Username</label>
    <input type="text" name="username" class="form-control" id="username" required />
  </div>
  <div class="form-group">
    <label for="pwd">Password:</label>
    <input
      type="password"
      name="password"
      class="form-control"
      id="pwd"
      required
    />
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>

<hr />
<h3 class="text-center">Or login with passport jwt strategy</h3>
<hr />

<form action="/login-jwt" method="POST">
  <span class="form-group">
    <label for="username">Username</label>
    <input type="text" name="username" class="form-control" id="username" required />
  </span>
  <span class="form-group">
    <label for="pwd">Password:</label>
    <input
      type="password"
      name="password"
      class="form-control"
      id="pwd"
      required
    /> </span
  ><br />
  <button type="submit" class="btn btn-default">
    Submit using jwt strategy
  </button>
</form>

<hr />
<h3 class="text-center">Or</h3>
<hr />
<a href="/auth/google" id="google-button" class="btn btn-block btn-danger">
  <i class="fa fa-google"></i> Sign in with Google
</a>
<a href="/auth/facebook" id="facebook-button" class="btn btn-block btn-primary">
  <i class="fa fa-facebook"></i> Sign in with Facebook
</a>
